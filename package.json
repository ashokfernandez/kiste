{
  "name": "kiste",
  "version": "0.3.0",
  "description": "A cross platform desktop player for Google Play Music",
  "main": "./lib/index.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha ./specs/ --recursive",
    "start": "gulp && ./node_modules/.bin/electron .",
    "build": "npm run build:osx && npm run build:win",
    "build:osx": "npm test && gulp && electron-packager . \"Kiste\" --out=build/osx/ --platform=darwin --arch=x64 --version=0.36.7 --icon=assets/osx/icon.icns --ignore=\"src|dist|build|specs|assets|circle\"",
    "build:win": "npm test && gulp && electron-packager . \"Kiste\" --out=build/win/ --platform=win32 --arch=ia32 --version=0.36.7 --icon=assets/win/icon.ico --ignore=\"src|dist|build|specs|assets|circle\"",
    "pack": "npm run pack:osx && npm run pack:win",
    "pack:osx": "npm run build:osx && electron-builder \"build/osx/kiste-darwin-x64/Kiste.app\" --platform=osx --out=\"dist/osx\" --config=packager.json",
    "pack:win": "npm run build:win && electron-builder \"build/win/kiste-win32-ia32\" --platform=win --out=\"dist/win\" --config=packager.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashokfernandez/kiste.git"
  },
  "keywords": [
    "Google",
    "Play",
    "Music",
    "Desktop"
  ],
  "author": "Ashok Fernandez <ashok.fernandez@gmail.com> (https://ashokfernandez.wordpress.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ashokfernandez/kiste/issues"
  },
  "homepage": "https://github.com/ashokfernandez/kiste#readme",
  "dependencies": {
    "babel-preset-es2015": "^6.3.13",
    "bluebird": "^3.0.6",
    "electron-localshortcut": "^0.6.0",
    "electron-shortcut-loader": "^0.4.0",
    "lodash": "^4.0.0",
    "node-notifier": "^4.4.0",
    "request": "^2.69.0",
    "temp": "^0.8.3",
    "which": "^1.2.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "chai": "^3.4.0",
    "del": "^2.2.0",
    "electron-builder": "^2.0.2",
    "electron-packager": "^5.1.1",
    "electron-prebuilt": "^0.34.1",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.2",
    "gulp-clean": "^0.3.1",
    "gulp-sass": "^2.1.1",
    "mocha": "^2.3.3",
    "run-sequence": "^1.1.5"
  }
}
