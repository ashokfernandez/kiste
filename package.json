{
  "name": "kiste",
  "version": "0.0.1",
  "description": "A cross platform desktop player for Google Play Music",
  "main": "./src/index.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha ./specs/ --recursive",
    "start": "./node_modules/.bin/electron .",
    "clean": "rm -rf ./dist",
    "clean:osx": "rm -rf ./dist/osx",
    "clean:win": "rm -rf ./dist/win",
    "build": "npm run clean && npm run build:osx && npm run build:win",
    "build:osx": "npm run clean:osx && ./node_modules/.bin/electron-packager . kiste --out=dist/osx --platform=darwin --arch=x64 --version=0.25.3 --icon=assets/osx/icon.icns",
    "build:win": "npm run clean:win && ./node_modules/.bin/electron-packager . kiste --out=dist/win --platform=win32 --arch=ia32 --version=0.25.3 --icon=assets/win/icon.ico",
    "pack": "npm run pack:osx && npm run pack:win",
    "pack:osx": "npm run build:osx && ./node_modules/.bin/electron-builder \"dist/osx/kiste.app\" --platform=osx --out=\"dist/osx\" --config=packager.json",
    "pack:win": "npm run build:win && ./node_modules/.bin/electron-builder \"dist/win/kiste-win32\" --platform=win --out=\"dist/win\" --config=packager.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashokfernandez/kiste.git"
  },
  "keywords": [
    "Google",
    "Play",
    "Music",
    "Desktop"
  ],
  "author": "Ashok Fernandez <ashok.fernandez@gmail.com> (https://ashokfernandez.wordpress.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ashokfernandez/kiste/issues"
  },
  "homepage": "https://github.com/ashokfernandez/kiste#readme",
  "dependencies": {},
  "devDependencies": {
    "chai": "^3.4.0",
    "electron-builder": "^2.0.2",
    "electron-packager": "^5.1.1",
    "electron-prebuilt": "^0.34.1",
    "mocha": "^2.3.3"
  }
}
